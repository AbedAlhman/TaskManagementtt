<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".pages.ProfileFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:background="@drawable/background"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/ivPimage"
            android:layout_width="114dp"
            android:layout_height="0dp"
            android:layout_marginStart="133dp"
            android:layout_marginTop="179dp"
            android:layout_marginBottom="109dp"
            android:src="@drawable/user"
            app:layout_constraintBottom_toTopOf="@+id/tvemail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvLname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/tvUname"
            app:layout_constraintStart_toStartOf="@+id/tvFname"
            app:layout_constraintTop_toBottomOf="@+id/tvFname" />

        <TextView
            android:id="@+id/tvFname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="1dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/tvLname"
            app:layout_constraintStart_toStartOf="@+id/tvemail"
            app:layout_constraintTop_toBottomOf="@+id/tvemail" />

        <TextView
            android:id="@+id/tvemail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="TextView"
            app:layout_constraintBottom_toTopOf="@+id/tvFname"
            app:layout_constraintStart_toStartOf="@+id/ivPimage"
            app:layout_constraintTop_toBottomOf="@+id/ivPimage" />

        <TextView
            android:id="@+id/tvUname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="271dp"
            android:text="TextView"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="@+id/tvLname"
            app:layout_constraintTop_toBottomOf="@+id/tvLname" />

        <Button
            android:id="@+id/Signoutbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="308dp"
            android:layout_marginTop="4dp"
            android:backgroundTint="#6CA6C6"
            android:text="SignOut"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>